# Momentus Backend Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Admin Authentication (Basic HTTP Auth)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Logging
LOG_LEVEL=info

# iNaturalist Configuration (No API key required!)
INATURALIST_BASE_URL=https://api.inaturalist.org/v1
INATURALIST_MAX_RESULTS=10
INATURALIST_CACHE_DURATION=3600000
# API Request Timing (in milliseconds)
API_REQUEST_DELAY_MS=1100

# Species Selection Radii (in kilometers)
SPECIES_RADIUS_START=1.6
SPECIES_RADIUS_MID=8.0
SPECIES_RADIUS_MAX=32.0
SPECIES_MIN_QUALITY=research

# GBIF Configuration (No API key required!)
GBIF_BASE_URL=https://api.gbif.org/v1
GBIF_MAX_RESULTS=20
GBIF_CACHE_DURATION=3600000
GBIF_SEARCH_RADIUS=5
GBIF_RECENT_YEARS=2

# eBird Configuration (Requires free API key from https://ebird.org/api/keygen)
EBIRD_API_KEY=your_ebird_api_key_here
EBIRD_BASE_URL=https://api.ebird.org/v2
EBIRD_MAX_RESULTS=30
EBIRD_CACHE_DURATION=1800000
EBIRD_DAYS_BACK=14
EBIRD_HOTSPOT_RADIUS=25

# Real-time Species Feature
USE_REALTIME_SPECIES=false

# Azure Text-to-Speech Configuration
# Get free API key from: https://azure.microsoft.com/en-us/services/cognitive-services/text-to-speech/
# Free tier: 500,000 characters per month
AZURE_TTS_API_KEY=your_azure_tts_api_key_here
AZURE_TTS_REGION=eastus
DISABLE_TTS=false